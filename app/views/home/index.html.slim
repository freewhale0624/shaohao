div.row
  div.row.col-md-8.col-md-offset-2
    table.table.table-bordered
      thread
      tr
        th(colspan="2") 去程
        th(colspan="2") 返程
      tbody
        - (0...WHEELDATA.length/2).each do |index|
          tr
            td.col-md-3= WHEELDATA[index][1]
            td.col-md-3= (@start_time + WHEELDATA[index][0]).strftime("%H:%M:%S")
            td.col-md-3= WHEELDATA[index + WHEELDATA.length/2][1]
            td.col-md-3= (@start_time + WHEELDATA[index + WHEELDATA.length/2][0]).strftime("%H:%M:%S")